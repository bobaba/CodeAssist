<p id="notice"><%= notice %></p>
<link href="https://fonts.googleapis.com/css?family=Caveat+Brush" rel="stylesheet">

<div class="container">

<h1 id="indexMainTitle">Recent Submissions</h1>
<h3>Welcome, <%= current_user.name %></h3>

<div class="row">
<br>
	<% @blog_posts.each do |blog_post| %>
		<div class="col-md-4">
		<div class="panel panel-default">
			<div class="panel-heading" id="boxColor">
				<%= link_to blog_post.title[0..36], blog_post, class: "btn btn-default btn-block bluish" %> 
				<div align="right">by <%= link_to blog_post.user.username, user_profile_path(id: blog_post.user.id) %></div>
			</div>
			<div class="panel-body indexBody">
				<p><%= blog_post.entry[0..250] %>...</p>
				<div align="right">
					<%= link_to '...read more', blog_post %>
				</div>
			</div>
			<div class="panel-footer" id="boxColor">
				Submitted: <%= blog_post.created_at.strftime('%m/%d/%Y (%I:%M%p)') %>
				<br>
				<%= blog_post.category %>
				<br>
				<strong><%= blog_post.comments.count %></strong> Reviews
				<br>

			</div>
		</div>
		</div>
	<% end %>

</div>
</div>


