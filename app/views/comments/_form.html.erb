<%= form_for(@comment) do |f| %>
	<% if @comment.errors.any? %>
		<div class="error_explanation">
		<h2><%= pluralize(@comment.errors.count, "error") %> prohibited this blog post from being saved!</h2>
		<ul>
		<% @comment.errors.full_messages.each do |message| %>
			<li><%= message %></li>
		<% end %>
		</ul>
		</div>
	<% end %>


<div class="thumbnail">
<div class="caption">

<a data-toggle="collapse" href="#commentCode">
<div class="panel-group" style="max-width: 100%;">
	<div class="panel panel-default">
		
		<div class="panel-heading expand">
		     <h4 class="panel-title" style="text-align: center; color: black;">
		        Expand to Add Code
		     </h4>
		</div>
		</a>

		<div id="commentCode" class="panel-collapse collapse">
		    <div class="panel-body">		  		
		  		<div class="form-group">
					<strong>Select Code Type: </strong> 
					<%= f.select :codetype, options_for_select(["HTML", "CSS", "ERB", "JavaScript", "Ruby"]) %>
					<br><br>
		  			<%= f.text_area :codeblock, class: "form-control maxFormBox", rows: "5", placeholder: "Place your code here!", default: nil %>		
		  		</div>
		    </div>
		</div>
	
	</div>
</div>


	<p><h3 style="text-align: left;">
	<div class="form-group">
		<%= f.text_area :entry, class: "form-control maxFormBox", rows: "3", placeholder: "Enter comment here..." %>
	</div></h3></p>
		
</div>


		<div class="actions">
		<%= f.submit "Comment", class: "btn btn-success" %>
		</div>





<div class="form-group hidden">
<%= f.number_field :user_id, value: current_user.id %>
</div>

<div class="form-group hidden">
<%= f.number_field :rating, value: 0, default: 0 %>
</div>

<div class="form-group hidden">
<%= f.number_field :blog_post_id, value: @blog_post.id %>
</div>


<% end %>